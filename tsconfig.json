{
  "compilerOptions": {
    "outDir": "lib",
    "target": "es5",
    "lib": ["es6", "esnext", "dom"],
    "module": "es2015",
    "declaration": true,
    "declarationDir": "lib",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "jsx": "react",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
