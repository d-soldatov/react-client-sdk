  "files": ["./node_modules/@testing-library/jest-dom/extend-expect.d.ts"],
  "include": ["src"],
  "exclude": ["node_modules", "lib", "dist", "example", "src/*.test.ts", "src/*.test.tsx", "src/__snapshots__"]
}
